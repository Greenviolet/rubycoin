<?xml version='1.0' encoding='utf-8' standalone='no'?>
<qnx xmlns="http://www.qnx.com/schemas/application/1.0">
    <id>net.greenviolet.rubycoin</id>
    <name>RubyCoin</name>
    <versionNumber>1.0.0</versionNumber>
    <description>RubyCoin Wallet</description>
    <initialWindow>
        <systemChrome>none</systemChrome>
        <transparent>false</transparent>
        <autoOrients>true</autoOrients>
        <aspectRatio>landscape</aspectRatio>
    </initialWindow>
    <author>Greenviolet</author>
    <copyright>Copyright 2014, rubycoin.org</copyright>
    <arg>-style</arg>
    <!-- available styles are bb10dark and bb10bright -->
    <arg>bb10dark</arg>
    <env var="LD_LIBRARY_PATH" value="/usr/lib/qt4/lib:$LD_LIBRARY_PATH"/>
    <env var="QT_PLUGIN_PATH" value="/usr/lib/qt4/plugins:$QT_PLUGIN_PATH"/>
    <env var="QML_IMPORT_PATH" value="/usr/lib/qt4/imports:$QML_IMPORT_PATH"/>
    <asset type="Qnx/Elf" path="${BUILD_DIR}/rubycoin-qt" entry="true">bitcoin-qt</asset>
    <asset path="icon-114.png">icon.png</asset>
    <authorId>gYAAgHOFhtY_d7C0AWgn5_gjGLY</authorId>
    <buildId>1</buildId>
    <action>access_internet</action>
    <action>run_when_backgrounded</action>
</qnx>
